{
  "ts-node": {
   "transpileOnly": true
  },
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom","dom.iterable", "esnext", "es5", "es6", "es7", "es2017"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "CommonJS",
    "baseUrl": ".",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noImplicitAny": false,
    "paths": {
      "@/*":["./src/*"]
    }
  },
  "include": ["src", "./externals.d.ts", "**/*.ts", "**/*.tsx", "src/tests"],
  "exclude": ["node_modules"]
}
